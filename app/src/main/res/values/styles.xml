<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="Container">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginBottom">42dp</item>

    </style>
    <style name="cardViewDemo" >
        <item name="android:layout_height">0px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="cardElevation">8dp</item>

    </style>
    <style name="carviewstyleGreen" parent="cardViewDemo">
        <item name="cardBackgroundColor">#388E3C</item>
    </style>
    <style name="carviewStyleRed" parent="cardViewDemo">
        <item name="cardBackgroundColor">#E53935</item>
    </style>
    <style name="carviewStylBlue" parent="cardViewDemo">
        <item name="cardBackgroundColor">#3b5998</item>
    </style>
    <style name="CategoryTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EnglishTextStyle" parent="TextStyle" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaoriTextStyle" parent="TextStyle" >
        <item name="android:textStyle">italic</item>
    </style>


    <style name="NumberActivityTheme" parent="AppTheme">
        <item name="colorPrimary">#E53935</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#F44336</item>
    </style>
    <style name="learnFamilyNameActivityTheme" parent="AppTheme">
        <item name="colorPrimary">#689F38</item>
        <item name="colorPrimaryDark">#558B2F</item>
        <item name="colorAccent">#7CB342</item>
    </style>

    <style name="learnColorActivityTheme" parent="AppTheme">
        <item name="colorPrimary">#3b5998</item>
        <item name="colorPrimaryDark">#0277BD</item>
        <item name="colorAccent">#0288D1</item>

    </style>
    <style name="PlayButtonStyle" >

    </style>

</resources>
